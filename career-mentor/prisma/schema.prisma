generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Stores the user's answers and the AI's raw analysis
model AssessmentSession {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  answers       Json
  resultSummary String?  @db.Text
  
  // Link to User (Optional, allows guest quizzes if needed later)
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  recommendations Recommendation[]
}

// Specific Career/Degree recommendations linked to a session
model Recommendation {
  id          String   @id @default(uuid())
  sessionId   String
  session     AssessmentSession @relation(fields: [sessionId], references: [id])
  
  title       String
  type        String   // "CAREER" or "DEGREE"
  matchScore  Int      // 0-100
  matchReason String   // "Why this fits"
  
  // Detail View Data
  overview    String   @db.Text
  skills      String[] // Array of strings for Skill Cloud
  difficulty  String   // Easy, Moderate, Hard
  futureScope String   // Low, Medium, High
}

// --- NEXTAUTH MODELS ---

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]

  assessments   AssessmentSession[]
  savedResources SavedResource[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SavedResource {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  resourceId String
  type       String  // "CAREER" or "DEGREE"
  title      String
  matchScore Int
  data       Json
  
  createdAt DateTime @default(now())

  @@unique([userId, resourceId])
}